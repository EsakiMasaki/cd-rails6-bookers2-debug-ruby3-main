<h2>
  <% if @range == "User" %>
    Users search for <%= @word %>
  <% else %>
    Books search for <%= @word %>
  <% end %>
</h2>

<table class="table">
  <% if @range == "User" %>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image ,size: "100x100" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show" , user_path(user) %></td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image ,size: "100x100" %></td>
        <td><%= link_to book.title,book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  <% end %>
</table>